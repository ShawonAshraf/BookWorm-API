{
    "name": "bookworm-api",
    "version": "1.0.0",
    "description": "API for a personal book library manager",
    "main": "index.js",
    "scripts": {
        "start": "npm run build && node dist/server.js",
        "start-watch": "export NODE_ENV=development && nodemon --exec babel-node -- server",
        "build": "rimraf dist/ && babel ./ --out-dir dist/ --ignore ./node_modules,./.babelrc,./package.json,./npm-debug.log --copy-files",
        "test": "export NODE_ENV=test && mocha --require babel-core/register ./**/*.test.js",
        "test-watch": "export NODE_ENV=test && nodemon --exec \"npm test\""
    },
    "engines": {
        "node": "10.3.0"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/ShawonAshraf/BookWorm-API.git"
    },
    "author": "Shawon Ashraf",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/ShawonAshraf/BookWorm-API/issues"
    },
    "homepage": "https://github.com/ShawonAshraf/BookWorm-API#readme",
    "dependencies": {
        "bcryptjs": "^2.4.3",
        "body-parser": "^1.18.3",
        "express": "^4.16.3",
        "jsonwebtoken": "^8.3.0",
        "mongodb": "^3.0.10",
        "mongoose": "^5.1.4",
        "validator": "^10.4.0"
    },
    "devDependencies": {
        "babel-cli": "^6.26.0",
        "babel-preset-es2015": "^6.24.1",
        "coffeescript": "^2.3.1",
        "expect": "^1.20.2",
        "lodash": "^4.17.10",
        "mocha": "^5.2.0",
        "nodemon": "^1.17.5",
        "rimraf": "^2.6.2",
        "supertest": "^3.1.0"
    }
}